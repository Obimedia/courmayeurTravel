{% set _footerFirst  = block('footerFisrt') %}
{% set _footerSecond = block('footerSecond') %}

{% set _all = _footerFirst|raw ~ _footerSecond|raw %}

{% if _footerFirst or _footerSecond is not empty %}
    {% set classFooterFirst  = classFooterFirst  is defined ? classFooterFirst  : 'grid-8' %}
    {% set classFooterSecond = classFooterSecond is defined ? classFooterSecond : 'grid-8' %}

    <footer id="section-footer" class="section section-footer">
        <div id="zone-footer-wrapper" class="zone-wrapper zone-footer-wrapper clearfix">
            <div id="zone-footer" class="zone zone-footer clearfix  {{ siteStyle }}">

                {% if _footerFirst is not empty %}
                    <div id="region-footer-first" class="{{ classFooterFirst }} region region-footer-first">
                        <div class="region-inner region-footer-first-inner">

                            {{ _footerFirst|raw }}

                        </div>
                    </div>
                {% endif %}

                {% if _footerSecond is not empty %}
                    <div id="region-footer-second" class="{{ classFooterSecond }} region region-footer-second">
                        <div class="region-inner region-footer-second-inner">

                            {{ _footerSecond|raw }}

                        </div>
                    </div>
                {% endif %}
            </div>
        </div>
    </footer>
{% endif %}